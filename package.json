        "prettier-plugin-tailwindcss": "^0.4.0",
        "turbo": "latest"
    },
    "packageManager": "pnpm@7.15.0",
    "name": "rocket-game",
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "semi": false,
        "arrowParens": "avoid",
