{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "globalEnv": [
        "CLIENT_PORT",
        "CLIENT_URL",
        "SERVER_PORT",
        "VITE_SERVER_URL",
        "VITE_AUTH_GOOGLE_CLIENT_ID"
    ],
    "pipeline": {
        "proto": {
            "outputs": [".proto/**"]
        },
        "build": {
            "dependsOn": ["proto", "lint", "^build"],
            "outputs": [".dist/**"]
        },
        "test": {
            "dependsOn": ["^test"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "dependsOn": ["proto"],
            "cache": false,
            "persistent": true
        },
        "preview": {
            "cache": false,
            "persistent": true
        }
    }
}
